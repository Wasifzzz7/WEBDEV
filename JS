    <title>Dynamic CSS</title>
</head>

<style>
    #box {

        background-color: blue;
        color: white;
        height: 80px;
        width: 200px;
        text-align: center;
        margin: auto;
        border-radius: 10px;
    }

    #mybuttons {

        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 10px;
        padding: 5px;
    }

    button {

        background-color: crimson;
        color: white;
        padding: 5px;
        border: 2px solid white;
        border-radius: 10px;
        margin: 5px;
        width: 100px;
        height: 40px;
    }
</style>

<body>

    <div id="box">
        <h1 id="text">Dynamic CSS</h1>
    </div>

    <div id="mybuttons">
        <div id="heights">
            <button onclick="h100()">height(100px)</button>
            <button onclick="h200()">height(200px)</button>
            <button onclick="h300()">height(300px)</button>
            <button onclick="h400()">height(400px)</button>
        </div>

        <div id="widths">
            <button onclick="w100()">width(100px)</button>
            <button onclick="w200()">width(200px)</button>
            <button onclick="w300()">width(300px)</button>
            <button onclick="w400()">width(400px)</button>
        </div>

        <div id="texts">
            <button onclick="t100()">text(green)</button>
            <button onclick="t200()">text(yellow)</button>
            <button onclick="t300()">text(blue)</button>
            <button onclick="t400()">text(red)</button>
        </div>

        <div id="bg">
            <button onclick="bg100()">bg(green)</button>
            <button onclick="bg200()">bg(yellow)</button>
            <button onclick="bg300()">bg(blue)</button>
            <button onclick="bg400()">bg(red)</button>
        </div>

    </div>
    <script>

function h100(){
    document.getElementById("box").style.height = "100px" ;
}

function h200(){
    document.getElementById("box").style.height = "200px" ;
}

function h300(){
    document.getElementById("box").style.height = "300px" ;
}

function h400(){
    document.getElementById("box").style.height = "400px" ;
}

function w100(){
    document.getElementById("box").style.width = "100px" ;
}

function w200(){
    document.getElementById("box").style.width = "200px" ;
}

function w300(){
    document.getElementById("box").style.width = "300px" ;
}

function w400(){
    document.getElementById("box").style.width = "400px" ;
}

function t100(){
    document.getElementById("box").style.color = "100px" ;
}

function w400(){
    document.getElementById("box").style.width = "400px" ;
}

function w400(){
    document.getElementById("box").style.width = "400px" ;
}

function w400(){
    document.getElementById("box").style.width = "400px" ;
}
    </script>


